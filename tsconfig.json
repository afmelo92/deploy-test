{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react", // Suporte a TSX (JSX)
    "allowJs": true, // Permite arquivos JS, se necessário
    "sourceMap": true // Gera mapas de origem para depuração
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
